MYSSLOBJS = $(shell ls -1 $(SOURCEDIR)/libmyssl/*.cpp |sed "s/\.cpp/\.o/" |sed "s/$(SOURCEDIR)\/libmyssl/$(LIBDIR)\/obj/")
